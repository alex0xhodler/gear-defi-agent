# ============================================
# TELEGRAM BOT CONFIGURATION (Required)
# ============================================
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ============================================
# BLOCKCHAIN RPC URLS (Required for bot)
# ============================================
# Ethereum Mainnet - REQUIRED for pool discovery
# Recommended: Use Alchemy or Infura (free tier available)
# Get key: https://www.alchemy.com/ or https://infura.io/
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Arbitrum (Optional - uses public RPC if not set)
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc

# Optimism (Optional)
OPTIMISM_RPC_URL=https://mainnet.optimism.io

# Sonic (Optional)
SONIC_RPC_URL=https://rpc.soniclabs.com

# Plasma (Optional)
PLASMA_RPC_URL=https://rpc.plasma.to

# ============================================
# AI/LLM CONFIGURATION (Optional)
# ============================================
# Google Gemini API for AI features
# Get key: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# WEB FRONTEND CONFIGURATION (Optional)
# ============================================
# Legacy Web3 RPC config (if using web interface)
ALCHEMY_API_KEY=your_alchemy_api_key
INFURA_PROJECT_ID=your_infura_project_id

# Gearbox Protocol Subgraph
GEARBOX_SUBGRAPH_URL=https://api.thegraph.com/subgraphs/name/gearbox-protocol/gearbox-v3-ethereum
GEARBOX_ADDRESS_PROVIDER=0x9ea7b04da02a5373317d745c1571c84aad03321d

# ============================================
# X402 PAYMENT SYSTEM (Optional)
# ============================================
AGENT_ID=gearbox-agent-001
PAYMENT_RECIPIENT_ADDRESS=0x_your_treasury_address_here

# Vercel KV for payment storage
KV_REST_API_URL=
KV_REST_API_TOKEN=

# ============================================
# DEPLOYMENT CONFIGURATION (Optional)
# ============================================
NODE_ENV=production
# APP_PATH=/home/ubuntu/gear-defi-agent/telegram-bot

# PM2 Deploy settings
# DEPLOY_USER=ubuntu
# DEPLOY_HOST=your-server.com
# DEPLOY_REPO=git@github.com:yourusername/gearagent.git
# DEPLOY_PATH=/home/ubuntu/gearagent

# ============================================
# MONITORING & LOGGING (Optional)
# ============================================
LOG_LEVEL=info
# VERBOSE=false
# FAST_MODE=false

# Upstash Redis for rate limiting
UPSTASH_REDIS_URL=
UPSTASH_REDIS_TOKEN=

# Sentry error tracking
SENTRY_DSN=

# ============================================
# SECURITY NOTES
# ============================================
# 1. NEVER commit .env to git
# 2. Use different keys for dev/staging/production
# 3. Rotate API keys regularly
# 4. Enable MFA on all API provider accounts
# 5. Use secret manager in production (AWS Secrets Manager, Vault, etc.)
