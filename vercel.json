{
  "buildCommand": "tsc && cd credit-app && npm install && npm run build",
  "outputDirectory": ".",
  "functions": {
    "api/chat.ts": {
      "memory": 1024,
      "maxDuration": 60
    },
    "api/tools/*.ts": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/credit",
      "destination": "/credit-app/dist/index.html"
    },
    {
      "source": "/credit/(.*)",
      "destination": "/credit-app/dist/$1"
    }
  ],
  "public": true
}
