# Gearbox Strategy Agent - Environment Configuration
# Copy this file to .env and fill in your values

# =====================================================
# TELEGRAM BOT CONFIGURATION
# =====================================================
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# =====================================================
# BLOCKCHAIN RPC ENDPOINTS
# =====================================================
# Ethereum Mainnet RPC URL
# Get free endpoints from: Alchemy, Infura, QuickNode, or use public RPCs
ETHEREUM_RPC_URL=https://eth.llamarpc.com

# Plasma Chain RPC URL
PLASMA_RPC_URL=https://rpc.plm.xyz

# =====================================================
# GEARBOX API
# =====================================================
# Gearbox Protocol API endpoints (optional, uses defaults if not set)
# GEARBOX_API_URL_ETHEREUM=https://api.gearbox.fi/v1
# GEARBOX_API_URL_PLASMA=https://api-plasma.gearbox.fi/v1

# =====================================================
# DATABASE
# =====================================================
# Path to SQLite database file
DB_PATH=./gearbox_bot.db

# =====================================================
# LOGGING
# =====================================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# =====================================================
# DEVELOPMENT/DEBUG SETTINGS
# =====================================================
# Use mock blockchain data instead of real RPC calls (for testing)
# USE_MOCK_DATA=false

# Enable fast mode (reduced monitoring intervals for development)
# FAST_MODE=false

# Enable verbose logging
# VERBOSE=false

# Node environment
NODE_ENV=production
